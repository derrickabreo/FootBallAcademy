<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/today_cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/today_fragment_team1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/black"
                android:textSize="@dimen/today_fragment_text_large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Team1" />

            <TextView
                android:id="@+id/today_fragment_team2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/black"
                android:textSize="@dimen/today_fragment_text_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Team2" />

            <TextView
                android:id="@+id/today_fragment_vs_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="90dp"
                android:layout_marginStart="69dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="@font/roboto"
                android:text="@string/today_fragment_recycler_vs"
                android:textColor="@android:color/black"
                android:textSize="@dimen/today_fragment_text_large"
                app:layout_constraintEnd_toStartOf="@+id/today_fragment_team2_tv"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/today_fragment_team1_tv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/today_fragment_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginEnd="107dp"
                android:layout_marginStart="102dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/black"
                android:textSize="@dimen/today_fragment_text_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/today_fragment_vs_tv"
                tools:text=" Catch the Game at: " />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>