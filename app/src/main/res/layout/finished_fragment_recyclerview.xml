<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/finished_cardview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/finished_fragment_team1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textSize="@dimen/finished_fragment_text_large"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Team1"/>

            <TextView
                android:id="@+id/finished_fragment_team2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/black"
                android:textSize="@dimen/finished_fragment_text_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Team2" />

            <TextView
                android:id="@+id/finished_fragment_vs_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="81dp"
                android:layout_marginStart="81dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/black"
                android:text="@string/finished_fragment_recycler_vs"
                android:textSize="@dimen/finished_fragment_text_large"
                app:layout_constraintEnd_toStartOf="@+id/finished_fragment_team2_tv"
                app:layout_constraintStart_toEndOf="@+id/finished_fragment_team1_tv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/finished_fragment_goals1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/black"
                android:textSize="@dimen/finished_fragment_text_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/finished_fragment_team1_tv"
                tools:text="goals" />

            <TextView
                android:id="@+id/finished_fragment_goals2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/black"
                android:textSize="@dimen/finished_fragment_text_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/finished_fragment_team2_tv"
                tools:text="goals"/>

            <TextView
                android:id="@+id/finished_fragment_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="91dp"
                android:layout_marginStart="91dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/black"
                android:textSize="@dimen/finished_fragment_text_large"
                app:layout_constraintEnd_toStartOf="@+id/finished_fragment_goals2_tv"
                app:layout_constraintStart_toEndOf="@+id/finished_fragment_goals1_tv"
                app:layout_constraintTop_toBottomOf="@+id/finished_fragment_vs_tv"
                tools:text="Date" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>